{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": false,
    "noImplicitUseStrict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [],
    "typeRoots": ["node_modules/@types", "@types"],
    "baseUrl": "./",
    "paths": {
      "sdk/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
